<Window     x:Class="ReferenceConfigurator.mainWindow.MainWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ReferenceConfigurator.mainWindow"
             xmlns:popup="clr-namespace:ReferenceConfigurator.templates"
            xmlns:utils="clr-namespace:ReferenceConfigurator.utils"
             xmlns:hc="https://handyorg.github.io/handycontrol"
             Height="{Binding Source={x:Static SystemParameters.MaximizedPrimaryScreenHeight}, Converter={utils:RatioConverter}, ConverterParameter='0.95' }" 
            Width="{Binding Source={x:Static SystemParameters.PrimaryScreenWidth}, Converter={utils:RatioConverter}, ConverterParameter='0.99' }"      
              WindowStartupLocation="CenterScreen"
            Title="Reference &amp; CV Creator"
            mc:Ignorable="d">
    <Grid>
        <popup:PopUpControl/>
    </Grid>
</Window>
