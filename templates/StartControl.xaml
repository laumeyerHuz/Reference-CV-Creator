<UserControl x:Class="ReferenceConfigurator.templates.StartControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ReferenceConfigurator.templates"
             xmlns:hc="https://handyorg.github.io/handycontrol"
             mc:Ignorable="d">
    <Grid>
        <StackPanel>
            <TextBlock 
                HorizontalAlignment="Center" Margin="5" Text="WELCOME!" Style="{StaticResource TextBlockLargeBold}"/>
            <hc:Divider LineStrokeThickness="2" LineStroke="{DynamicResource DarkPrimaryBrush}"/>
            <TextBlock HorizontalAlignment="Center" Margin="2" Text="First time?" Style="{StaticResource TextBlockLarge}"/>
            <TextBlock HorizontalAlignment="Center" Margin="2" Text="Check out the tips and Settings site to get started" Style="{StaticResource TextBlockLarge}"/>
            <hc:StepBar Name="step" StepIndex="{Binding state}" IsMouseSelectable="True">
                <hc:StepBarItem Content="Register"/>
                <hc:StepBarItem Content="BasicInfo"/>
                <hc:StepBarItem Content="UploadFile"/>
                <hc:StepBarItem Content="Complete"/>
            </hc:StepBar>
        </StackPanel>
        
    </Grid>
</UserControl>
